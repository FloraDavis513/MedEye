<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MedEye.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MedEye.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="MedEye"
        WindowState="Maximized">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid Name="Menu" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" >
      <Button Name="Tyr" Content="Тир" Command="{Binding StartTyr}" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" />
      <Button Content="Погоня" Command="{Binding StartFollowing}" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"/>
      <Button Content="Слияние" Command="{Binding StartMerger}" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"/>
      <Button Content="Совмещение" Command="{Binding StartCombination}" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center"/>
      <Button Content="Контур" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"/>
  </Grid>
  
</Window>
