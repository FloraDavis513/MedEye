<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MedEye.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="MedEye"
        WindowState="FullScreen">


  <Grid Name="Menu" RowDefinitions="Auto, Auto, Auto, Auto, Auto" >
      <Button Name="Tyr" Content="Тир" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" FontSize="24" Width="200" HorizontalContentAlignment="Center"/>
      <Button Name="Following" Content="Погоня" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" FontSize="24" Width="200" HorizontalContentAlignment="Center"/>
      <Button Name="Merger" Content="Слияние" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" FontSize="24" Width="200" HorizontalContentAlignment="Center"/>
      <Button Name="Combination" Content="Совмещение" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" FontSize="24" Width="200" HorizontalContentAlignment="Center"/>
      <Button Name="Exit" Content="Выход" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" FontSize="24" Width="200" HorizontalContentAlignment="Center"/>
  </Grid>
  
</Window>
