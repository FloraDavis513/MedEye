<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:MedEye.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MedEye.Views.Following"
        Title="Following"
        WindowState="FullScreen"
        Background="Black">
    <Canvas>
        <Border
            BorderBrush="Red"
            BorderThickness="10"
            Background="Black"
            HorizontalAlignment="Left"
            Height="150"
            Width="150"
            Name="Stalker"
            ZIndex="2">
        </Border>
        <Border
            Background="Red"
            HorizontalAlignment="Left"
            CornerRadius="50"
            Height="75"
            Width="75"
            Name="Target"
            ZIndex="2">
        </Border>
        <Border
            Background="White"
            Height="150"
            Width="500"
            CornerRadius="15"
            Name="Log"
            Opacity="0">
            <Label
                Name="Result"
                Background="White"
                Height="140"
                Width="450"
                ZIndex="3"
                FontSize="30">
                Результат игры:
            </Label>
        </Border>
    </Canvas>
</Window>
